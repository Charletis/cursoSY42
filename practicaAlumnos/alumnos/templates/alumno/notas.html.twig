{% extends 'base.html.twig' %}

{% block title %}Notas Alumno Expediente - {{ alumno.nExpediente }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Notas del alumno {{ alumno.nombre }} {{ alumno.apellidos }}</h1>

    <ul>
            <li>
                <p>Nº Expediente: <span>{{ alumno.nExpediente }}</span></p>
                <p>Nombre: <span>{{ alumno.nombre }}</span></p>
                <p>Apellidos <span>{{ alumno.apellidos }}</span></p>
                <p>Fecha Nacimiento: <span>{{ alumno.fechaNacimiento|date('d-m-Y') }}</span></p>
                <p>Género: <span>{{ alumno.sexo }}</span></p>
                <p>Email: <span>{{ alumno.email }}</span></p>
                <p>Teléfono: <span>{{ alumno.telefono }}</span></p>
                <p>Grado: <span>{{ alumno.grado.nombre }}</span></p>
                <h3>Notas</h3>
                <ul>
                    {% for nota in alumno.notas %}
                    {% dump(nota) %}
                        <li>{{ nota.asignatura.nombre }} - {{ nota.nota }}</li>
                    {% endfor %}
                </ul>
                <p><a href="{{ path('alumnos') }}">Volver al listado de alumnos</a></p>
            </li>
    </ul>
</div>
{% endblock %}
